# Brainfuck Programming Language
syntax "bf" "\.bf$"


color bold,sky          "[+-]"
color bold,rosy         "[><]"
color bold,lightwhite   "\["
color bold,lightwhite   "\]"
color lightwhite        "[.,]"

# Show trailing whitespace
color ,green            "[[:space:]]+$"
