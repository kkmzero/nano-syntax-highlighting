# Cascading Style Sheets
syntax "css" "\.(css|scss)$"

color blue                  ":active|:focus|:hover|:link|:visited|:link|:after|:before|$"
color lightcyan             "#([0-9]+|#x[0-9a-fA-F]+|[A-Za-z][A-Za-z0-9]*)"
color italic,magenta        ""(\\.|[^"])*"|'(\\.|[^'])*'"

#Comments
color lightblack            start="\/\*" end="\*\/"
color italic,black,red      "TODO:?"
color italic,black,green    "NOTE:?"
color italic,black,yellow   "CIV:?"


#Show trailing whitespace
#color ,green "[[:space:]]+$"
