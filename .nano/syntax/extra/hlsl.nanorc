color magenta               "^[[:space:]]*#[[:space:]]*(define|include(_next)?|(un|ifn?)def|endif|el(if|se)|if|error|pragma|line)"
icolor lightcyan            "\<(true|false|null)\>"
color white                 "[-+/*=<>?:!~%&|^]"
color lightcyan             "\<([0-9]+|0x[0-9a-fA-F]+|.[0-9a-fA-F]*)\>"

#Comments
color lightblack            "(^|[[:space:]])//.*"
color lightblack            start="/\*" end="\*/"
color italic,black,red      "TODO:?"
color italic,black,green    "NOTE:?"
color italic,black,yellow   "CIV:?"


