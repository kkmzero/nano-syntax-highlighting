# Cascading Style Sheets
syntax "css" "\.(css|scss)$"


color bold,normal              ":active|:focus|:hover|:link|:visited|:link|:after|:before|$"
color italic,normal            ""(\\.|[^"])*"|'(\\.|[^'])*'"

# Comments
color italic,normal            start="\/\*" end="\*\/"
color italic,black,lightwhite  "(TODO|FIXME|BUG|NOTE|CIV):?"

# Show trailing whitespace
color ,green                   "[[:space:]]+$"
